{
  "compilerOptions": {
    // Output
    "rootDir": "src",
    "outDir": "dist",

    // Node (CJS) runtime
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",

    // Types & interop
    "types": ["node"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,

    // Strictness (safe defaults)
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Project niceties
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Optional path alias (use `@/â€¦` to import from src)
    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] }
  },
  "include": ["src/**/*.ts", "src/scripts/**/*.ts"],
  "exclude": ["dist", "node_modules", "drizzle.config.ts"]
}
